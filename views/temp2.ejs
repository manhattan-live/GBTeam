<script>
    document.addEventListener('DOMContentLoaded', function() {
    // Получаем все ссылки табов
    const tabLinks = document.querySelectorAll('.tab-link');
    
    // Добавляем обработчик для каждой ссылки
    tabLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Убираем активный класс у всех ссылок
            tabLinks.forEach(l => {
                l.classList.remove('active', 'border-bottom', 'border-2', 'border-primary', 'text-primary');
                l.classList.add('text-muted');
            });
            
            // Добавляем активный класс текущей ссылке
            this.classList.add('active', 'border-bottom', 'border-2', 'border-primary', 'text-primary');
            this.classList.remove('text-muted');
            
            // Показываем соответствующий контент
            const tabId = this.getAttribute('data-tab');
            showTabContent(tabId);
        });
    });
    
    // Функция показа контента таба
    function showTabContent(tabId) {
        const tabContents = document.querySelectorAll('.tab-pane');
        tabContents.forEach(content => {
            content.style.display = content.id === tabId ? 'block' : 'none';
        });
    }
    
    // Показываем первый таб при загрузке
    showTabContent('details');
});
</script>